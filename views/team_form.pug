extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Team:
      input#name.form-control(type='text', placeholder='Dignitas, Cloud9 etc.' name='name' value=(undefined===team ? '' : team.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg