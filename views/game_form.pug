extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Game:
      input#name.form-control(type='text', placeholder='DotA, WoW etc.' name='name' value=(undefined===game ? '' : game.name))
      label(for='sumary') Description:
      input#name.form-control(type='text', placeholder='FPS, MOBA, RTS.' name='summary' value=(undefined===game ? '' : game.summary))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg