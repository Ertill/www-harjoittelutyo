extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Role:
      input#name.form-control(type='text', placeholder='Tank, DPS etc.' name='name' value=(undefined===role ? '' : role.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg